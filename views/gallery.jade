extends layout

block scripts
  script(src='/drawv/javascripts/pixi.min.js')
  script(src='/drawv/javascripts/gallery.js')

block content
  #header
    h1= title
    button#btnToCanvas(onclick='navigateToCanvas()') Draw something!
  #overlay(onclick='toggleOverlay(event)')
    #areaInnerOverlay
      #areaHeader
      #areaReplayCanvas
      #areaControls
        button#btnRespond(onclick='navigateToCanvas()') Respond
        button#btnSave(onclick='downloadImageAsPng()') Save Image
      #areaResponses
        ul#responseList
  #areaCanvasContainer
